{
	"manifest_version": 3,
	"name": "Bookmark Manager Plus",
	"version": "0.9.10",
	"description": "Search bookmarks and do whatever you can imagine.",

	"options_ui": {
		"page": "options.html"
	},
	
	"icons": {
		"16": "icon/icon128.png",
		"48": "icon/icon128.png",
		"64": "icon/icon128.png"
	},
	
	"content_security_policy": {
    	"extension_pages": "script-src 'self'"
	},

	"action": {
		"default_icon": "icon/icon128.png",
		"default_popup": "popup.html"
	},

	"background": {
		"service_worker": "js/background.js",
		"type": "module"
	},

	"permissions": [
		"bookmarks",
		"tabs",
		"storage",
		"favicon"
	]
}